{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "lib": ["DOM", "DOM.Iterable", "ES5", "ES6", "ESNext"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
